<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="com.rogmax.amirjaber.playground.MainActivity">


    <Button
        android:id="@+id/read_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:background="@drawable/drawer_item_background"
        android:drawableLeft="@drawable/ic_about"
        android:paddingRight="10dp"
        android:text="read me"
        android:textAllCaps="false" />


    <Button
        android:id="@+id/get_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/button_pressed"
        android:fontFamily="@font/roboto_thin"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Get Current Location"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <Button
        android:id="@+id/map_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/get_location"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_pressed"
        android:text="Add Location" />


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignTop="@+id/read_me"
        android:layout_toLeftOf="@+id/read_me"
        android:layout_toStartOf="@+id/read_me"
        android:src="@drawable/click2" />

    <TextView
        android:id="@+id/clickMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="116dp"
        android:fontFamily="@font/roboto_medium"
        android:onClick="goToSite"
        android:text="CRUD &amp; Google Maps 2 API  http://unitestproj.tk" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/read_me"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/read_me"
        android:layout_marginBottom="55dp"
        android:fontFamily="@font/roboto_thin"
        android:text="Amir Jaber "
        android:textStyle="italic" />
</RelativeLayout>
